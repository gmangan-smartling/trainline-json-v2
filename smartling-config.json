{
"locales": [
{
"smartling" : "de-DE",
"application" : "de-DE"
},
{
"smartling" : "nl-NL",
"application" : "nl-NL"
}
],     
     "resourceSets": [
         {
            "type"                      : "json",
            "authorizeContent"          : false,
            "pathRegex"                 : "json\\/.*_en\\.json",
            "translationPathExpression" : "${originalFile.path}${originalFile.baseName.replaceAll('_en$', '_'+locale)}.${originalFile.extension}"
         },
          {
             "type"                      : "ARB",
            "authorizeContent"          : false,
            "pathRegex"                 : "arb\\/.*_en\\.arb",
            "translationPathExpression" : "${originalFile.path}${originalFile.baseName.replaceAll('_en$', '_'+locale)}.${originalFile.extension}"  
          }
     ]
}
